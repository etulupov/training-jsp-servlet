<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">


    <servlet>
        <servlet-name>velocity</servlet-name>
        <servlet-class>org.apache.velocity.tools.view.VelocityViewServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>velocity</servlet-name>
        <url-pattern>*.vm</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>Guestbook</servlet-name>
        <servlet-class>com.noveogroup.tulupov.guestbook.servlet.GuestbookServlet</servlet-class>
        <init-param>
            <param-name>ui</param-name>
            <param-value>index.vm</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>Guestbook</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>JsStrings</servlet-name>
        <servlet-class>com.noveogroup.tulupov.guestbook.servlet.LocalizationServlet</servlet-class>
        <init-param>
            <param-name>ui</param-name>
            <param-value>/js/strings.vm</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>JsStrings</servlet-name>
        <url-pattern>/js/strings.js</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Error404</servlet-name>
        <servlet-class>com.noveogroup.tulupov.guestbook.servlet.LocalizationServlet</servlet-class>
        <init-param>
            <param-name>ui</param-name>
            <param-value>404.vm</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>Error404</servlet-name>
        <url-pattern>/error.html</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>OldBrowser</servlet-name>
        <servlet-class>com.noveogroup.tulupov.guestbook.servlet.LocalizationServlet</servlet-class>
        <init-param>
            <param-name>ui</param-name>
            <param-value>old.vm</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>OldBrowser</servlet-name>
        <url-pattern>/old.html</url-pattern>
    </servlet-mapping>


    <welcome-file-list>
        <welcome-file>index</welcome-file>
    </welcome-file-list>

    <error-page>
        <error-code>404</error-code>
        <location>/error.html</location>
    </error-page>


</web-app>